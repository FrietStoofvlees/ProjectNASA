<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProjectNasa.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:ProjectNasa.View"
    Shell.FlyoutBehavior="Disabled">

    <TabBar x:Name="shellTabBar">
        <ShellContent Title="Home"
                      x:Name="tabMainPage"
                      Icon="home_icon.png"
                      ContentTemplate="{DataTemplate view:MainPage}"
                      Route="MainPage"/>
        <ShellContent Title="Apod"
                      x:Name="tabApodPage"
                      ContentTemplate="{DataTemplate view:ApodPage}"
                      Route="ApodPage"/>
        <ShellContent Title="Profile"
                      x:Name="tabProfilePage"
                      Icon="profile_icon.png"
                      ContentTemplate="{DataTemplate view:LoginPage}"
                      Route="LoginPage"/>
    </TabBar>

</Shell>
